<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>tst-provider-fanbiao</display-name>
	<description>整案服务</description>

	<context-param>
		<description>初始化加载spring配置文件</description>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:application-*.xml</param-value>
	</context-param>

	<!-- 系统参数 -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j-configuration.xml</param-value>
	</context-param>

	
	<!-- Log4j 监听放在最前面 -->
	<listener>
		<listener-class>tst.project.log4j.Log4jConfigurationListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- session失效时间 /分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>/index.html</welcome-file>
	</welcome-file-list>
</web-app>
